<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Dashboard - Print3DShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Admin" asp-action="Index">
                    <i class="bi bi-printer3d-nozzle me-2 fs-3"></i>
                    <span class="fw-bold">Admin Dashboard</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i> Back to Site
                            </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid mt-5 pt-4">
        <div class="row">
            <div class="col-lg-2 p-3">
                <div class="admin-sidebar">
                    <h5 class="fw-bold mb-3">Navigation</h5>
                    <nav class="nav flex-column">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Admin" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")"
                           asp-controller="Admin" asp-action="Index">
                            <i class="bi bi-speedometer2 me-2"></i> Dashboard
                        </a>
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Products" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")"
                           asp-controller="Products" asp-action="Index">
                            <i class="bi bi-box-seam me-2"></i> Products
                        </a>
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Categories" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")"
                           asp-controller="Categories" asp-action="Index">
                            <i class="bi bi-tags me-2"></i> Categories
                        </a>
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "PrintingServices" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")"
                           asp-controller="PrintingServices" asp-action="Index">
                            <i class="bi bi-printer me-2"></i> Printing Services
                        </a>
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "PrintingServices" && ViewContext.RouteData.Values["Action"].ToString() == "ManageRequests" ? "active" : "")"
                           asp-controller="PrintingServices" asp-action="ManageRequests">
                            <i class="bi bi-file-earmark-text me-2"></i> Print Requests
                        </a>
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Orders" && ViewContext.RouteData.Values["Action"].ToString() == "ManageOrders" ? "active" : "")"
                           asp-controller="Orders" asp-action="ManageOrders">
                            <i class="bi bi-cart me-2"></i> Orders
                        </a>
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Users" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")"
                           asp-controller="Users" asp-action="Index">
                            <i class="bi bi-people me-2"></i> Users
                        </a>
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Reports" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")"
                           asp-controller="Reports" asp-action="Index">
                            <i class="bi bi-graph-up me-2"></i> Reports
                        </a>
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Settings" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")"
                           asp-controller="Settings" asp-action="Index">
                            <i class="bi bi-gear me-2"></i> Settings
                        </a>
                    </nav>
                </div>
            </div>
            <div class="col-lg-10 p-3">
                <div class="admin-content">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>